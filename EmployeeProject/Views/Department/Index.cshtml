@{  
    ViewData["Title"] = "Index";
}

@model IEnumerable<Department> 

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col">
            <a asp-controller="Department" asp-action="Create" class="btn btn-info mt-2">+ Create</a>
            <table cellpadding="5" class="table-responsive table-striped mt-2 p-3 text-center" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Department Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="15%">
                                @item.DeptId
                            </td>
                            <td width="35%">
                                @item.DeptName
                            </td>
                            <td width="40%">
                                <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.DeptId" onclick="return confirm('Are you sure to delete the Employee')" class="btn btn-danger">Delete</a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>