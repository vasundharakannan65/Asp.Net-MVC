@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Employee>

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-info mt-2">+ Create</a>
            <table cellpadding="5" class="table-responsive table-striped mt-2 p-3 text-center" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Designation</th>
                        <th>Hired Date</th>
                        <th>Department Id</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td width="10%">
                            @item.EmpId
                        </td>
                        <td width="15%">
                            @item.EmpName
                        </td>
                        <td width="15%">
                            @item.EmpDesignation
                        </td>
                        <td width="10%">
                            @item.HireDate
                        </td>
                        <td width="20%">
                            @item.DeptId
                        </td>
                        <td width="30%">
                            <a asp-controller="Employee" asp-action="Update" asp-route-id="@item.EmpId" class="btn btn-info">Edit</a>
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.EmpId" onclick="return confirm('Are you sure to delete the Employee')" class="btn btn-danger">Delete</a>
                        </td>

                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>