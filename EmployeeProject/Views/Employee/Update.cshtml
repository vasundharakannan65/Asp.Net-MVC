@{  
    ViewData["Title"] = "Update";
}

@model Employee

<div class="row justify-content-center align-items-center">
    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <form asp-action="Update" method="post">
            <input hidden asp-for="EmpId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="panel center-div mt-3">
                <div class="panel-header">
                    <h5 class="panel-title text-center p-2">Edit Employee</h5>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="EmpName"></label>
                                <div class="col-md-12">
                                    <input type="text" asp-for="EmpName" class="form-control" readonly />
                                    <span asp-validation-for="EmpName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="EmpDesignation"></label>
                                <div class="col-sm-12">
                                    <select asp-for="EmpDesignation" class="form-control" asp-items="Html.GetEnumSelectList<Designation>()">
                                        <option selected="">---- Select ----</option>
                                    </select>
                                    <span asp-validation-for="EmpDesignation" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Department.DeptId"></label>
                                <div class="col-sm-12">
                                    <select asp-for="Department.DeptId" class="form-control" asp-items="@ViewBag.myDropdown" >
                                        <option selected="">---- Select ----</option>
                                    </select>
                                    <span asp-validation-for="Department.DeptId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="HireDate"></label>
                                <div class="col-sm-12">
                                    <input type="date" class="form-control" asp-for="HireDate" />
                                    <span asp-validation-for="HireDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="panel-footer center-div">
                                <div class="form-group row">
                                    <div class="col-6">
                                        <input type="submit" class="btn btn-info" onclick="return alert('Successfully updated!')" value="Update" />
                                    </div>
                                    <div class="col-6">
                                        <a asp-action="Index" class="btn btn-info">Back</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>